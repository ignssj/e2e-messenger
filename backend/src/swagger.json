{
    "openapi": "3.0.0",
    "info": {
        "title": "E2E Messenger API",
        "description": "End-to-end encrypted messaging service",
        "contact": {
            "email": "ignacio.engcomp@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
        "url": "http://localhost:3000/",
        "description": "Local API"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "summary": "Creates an user",
                "tags": ["Users"],
                "security": [{"bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "username": "jhondoe",
                                        "password": "superpassword",
                                        "publicKey": "superkey"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Get all users",
                "tags": ["Users"],
                "security": [{"bearerAuth": [] }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "No content"
                    },
                    "500": {
                        "description": "Internal error"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "summary": "Get an user",
                "description": "Get an user by ID",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "ID of user to update",
                    "required": true,
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Missing id"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "Internal error"
                    }
                }
            },
            "put": {
                "summary": "Update an user",
                "description": "Updates an user by ID",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "ID of user to update",
                    "required": true,
                    "type": "string"
                }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Missing id"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "Internal error"
                    }
                }
            },
            "delete": {
                "summary": "Delete an user",
                "description": "Deletes an user by ID",
                "tags": ["Users"],
                "security": [{"bearerAuth": []}],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "description": "ID of user to update",
                    "required": true,
                    "type": "string"
                }],
                "responses": {
                    "203": {
                        "description": "User deleted succesfully"
                    },
                    "400": {
                        "description": "Missing id"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "Internal error"
                    }
                }
            }
        }

    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "publicKey": {
                        "type": "string"
                    },
                    "createdAt": { 
                        "type": "string",
                        "format": "date"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date"
                    }
                }
            },
            "Contact": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "userid": {
                        "type": "string"
                    },
                    "contact_userid": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "publicKey": {
                        "type": "string"
                    },
                    "createdAt": { 
                        "type": "string",
                        "format": "date"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date"
                    }
                }
            },
            "Message": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "sender": {
                        "type": "string"
                    },
                    "receiver": {
                        "type": "string"
                    },
                    "payload": {
                        "type": "string"
                    },
                    "createdAt": { 
                        "type": "string",
                        "format": "date"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date"
                    }
                }
            }
        }
    },
    "securitySchemes": {
        "bearerAuth": {
            "type": "http",
            "schema": "bearer",
            "bearerFormat": "JWT"
        }
    }
}